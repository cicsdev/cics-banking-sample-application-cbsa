<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>HursleyBank</realm-name>
  </login-config>
  <security-constraint>
    <display-name>com.ibm.cics.cip.bank.LibertyAPI.webUI/banking</display-name>
    <web-resource-collection>
    	<web-resource-name>/banking/*</web-resource-name>
    	<description>
    		Protection area for com.ibm.cics.cip.bank.LibertyAPI.webUI
    	</description>
    	<url-pattern>/banking/*</url-pattern>

    	<http-method>GET</http-method>

    	<http-method>POST</http-method>

    	<http-method>PUT</http-method>

    	<http-method>DELETE</http-method>

    </web-resource-collection>
    <auth-constraint>
      <description>All Authenticated users of com.ibm.cics.cip.bank.LibertyAPI.webUI

JSON API stuff you need to be authenticated AND ssl</description>
      <role-name>cicsAllAuthenticated</role-name>
    </auth-constraint>
    <user-data-constraint>
    	<transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-role>
    <description>All Authenticated users of com.ibm.cics.cip.banking.api.json</description>
    <role-name>cicsAllAuthenticated</role-name>
  </security-role>
  <context-param>
    <param-name>disable-xsrf-protection</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>syncId</param-name>
    <param-value>false</param-value>
</context-param>
  <display-name>com.ibm.cics.cip.bank.LibertyAPI.webUI</display-name>
  <security-constraint>
  	<display-name>com.ibm.cics.cip.bank.LibertyAPI.webUI/*</display-name>
  	<web-resource-collection>
  		<web-resource-name>com.ibm.cics.cip.bank.LibertyAPI.webUI</web-resource-name>
  		<url-pattern>/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<description>
  			WebUI stuff does not need to be SSL but you need to be
  			authenticated
  		</description>
  		<role-name>cicsAllAuthenticated</role-name>
  	</auth-constraint>
  </security-constraint>
</web-app>